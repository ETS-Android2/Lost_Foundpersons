<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_height="100dp"
            android:layout_width="100dp"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile1"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/miss_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/cardview"
            android:text="Mensil Odero"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/miss_age"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="34 Years"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_name"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>


        <TextView
            android:id="@+id/miss_status"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="status: Found"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_age"
            android:layout_toRightOf="@id/cardview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>


    </RelativeLayout>

</RelativeLayout>