<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:padding="10dp"
           >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:layout_centerVertical="true"
                    android:src="@drawable/profile1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/imageview"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/miss_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@id/imageview"
            android:text="Mensil Odero"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/miss_age"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="34 Years"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_name"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>



        <TextView
            android:id="@+id/miss_lo"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="status: Found"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_age"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>
        <TextView
            android:id="@+id/miss_gender"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="status: Found"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_lo"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>

        <TextView
            android:id="@+id/miss_status"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="status: Found"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_below="@id/miss_gender"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="1dp"/>
        </LinearLayout>
       </RelativeLayout>
    </androidx.cardview.widget.CardView>
</com.google.android.material.card.MaterialCardView>